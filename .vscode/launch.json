    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "redirectOutput": true
        },
        {
            "name": "Hex CNN 3x3",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hex_main.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "3",
                "--nnet", "base_cnn",
                "--load_folder", "./temp/cnn_3x3"
            ]
        },
        {
            "name": "Hex GAT 4x4, no self-play",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hex_main.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "4",
                "--nnet", "base_gat",
                "--load_folder", "./temp/gat",
                "--load_model",
                "--load_file", "checkpoint_3.pth.tar",
                "--numMCTSSims", "20",
                "--numIters", "1",
                "--start_iteration", "4",
                "--numEps", "0"
            ]
        },
        {
            "name": "Hex GAT 4x4",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hex_main.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "4",
                "--nnet", "base_gat",
                "--load_folder", "./temp/gat",
                "--load_model",
                "--load_file", "checkpoint_3.pth.tar",
                "--numMCTSSims", "20",
                "--numIters", "1",
                "--start_iteration", "4",
                "--numEps", "1"
            ]
        },
        {
            "name": "Hex Pit 5x5",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pit_hex.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "5",
                "--verbose", 
                "--player2", "human"
            ]
        },
        {
            "name": "Hex Pit 5x5 - net vs MCTS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pit_hex.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "5",
                "--verbose", 
                "--player2", "MCTS"
            ]
        },
        {
            "name": "Hex Pit 5x5 - id embedding test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pit_hex.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "5",
                "--num_games", "2",
                "--verbose", 
                "--cpu1_checkpoint", "temp/gat/strong_5x5_b.pth.tar", "--p1_MCTS_sims", "100", "--p1_nnet", "base_gat",
                "--player2", "nnet", "--cpu2_checkpoint", "temp/gat/strong_5x5_b.pth.tar", "--p2_MCTS_sims", "100", "--p2_nnet", "gat_random_id_10d"
            ]
        },
        {
            "name": "Hex Pit 6x6",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pit_hex.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "6",
                "--verbose", 
                "--player2", "human"
            ]
        }
    ]
}