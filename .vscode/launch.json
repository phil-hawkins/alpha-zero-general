    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "redirectOutput": true
        },
        {
            "name": "Hex CNN 3x3",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hex_main.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "3",
                "--nnet", "base_cnn",
                "--load_folder", "./temp/cnn_3x3"
            ]
        },
        {
            "name": "Hex GAT 4x4, no self-play",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/hex_main.py",
            "console": "integratedTerminal",
            "redirectOutput": true,
            "args" : [
                "--game_board_size", "4",
                "--nnet", "base_gat",
                "--load_folder", "./temp/gat",
                "--load_model",
                "--load_file", "checkpoint_3.pth.tar",
                "--numMCTSSims", "20",
                "--numIters", "1",
                "--start_iteration", "4",
                "--numEps", "0"
            ]
        }
    ]
}